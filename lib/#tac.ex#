defmodule Tac.CLI do
  @moduledoc """
  Documentation for Tac.
  """

  @doc """
  Hello world.

  ## Examples

      iex> Tac.hello
      :world

  """
  def main([]) do
    usage()
  end

  def main() do
    IO.
  end

  def main([filename]) do
    handle_file(filename)
  end

  def handle_file(filename) do
    IO.puts("doing something with #{filename}")
  end

  def usage() do
    IO.puts("tac filename")
  end

end
